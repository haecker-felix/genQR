{
   "app-id":"de.haeckerfelix.genQR",
   "runtime":"org.gnome.Platform",
   "runtime-version":"master",
   "sdk":"org.gnome.Sdk",
   "command":"genqr",
   "finish-args":[
      "--share=ipc",
      "--share=network",
      "--socket=x11",
      "--socket=wayland",
      "--socket=pulseaudio",
      "--device=dri",
      "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
      "--filesystem=xdg-run/dconf",
      "--filesystem=~/.config/dconf:ro",
      "--filesystem=host",
      "--talk-name=ca.desrt.dconf"
   ],
   "modules":[
      {
         "name":"libqrencode",
         "sources":[
            {
               "type":"git",
               "url":"https://github.com/fukuchi/libqrencode",
               "branch":"master"
            }
         ]
      },
      {
        "name": "libgee",
        "build-options" : {
            "env": {
                "PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_GIRDIR": "/app/share/gir-1.0",
                "PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_TYPELIBDIR": "/app/lib/girepository-1.0"
            }
        },
        "sources": [
            {
                "type": "archive",
                "url": "https://download.gnome.org/sources/libgee/0.20/libgee-0.20.0.tar.xz",
                "sha256": "21308ba3ed77646dda2e724c0e8d5a2f8d101fb05e078975a532d7887223c2bb"
            }
        ]
      },
      {
         "name":"gxml",
         "build-options" : {
            "env": {
                "PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_GIRDIR": "/app/share/gir-1.0",
                "PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_TYPELIBDIR": "/app/lib/girepository-1.0"
            }
        },
         "sources":[
            {
               "type":"git",
               "url":"https://git.gnome.org/browse/gxml",
               "branch":"master"
            }
         ]
      },
      {
         "name":"gsvg",
         "build-options" : {
            "env": {
                "PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_GIRDIR": "/app/share/gir-1.0",
                "PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_TYPELIBDIR": "/app/lib/girepository-1.0"
            }
        },
         "buildsystem":"meson",
         "sources":[
            {
               "type":"git",
               "url":"https://gitlab.com/pwmc/gsvg.git",
               "branch":"master"
            }
         ]
      },
      {
         "name":"qrsvg",
         "buildsystem":"meson",
         "sources":[
            {
               "type":"git",
               "url":"https://gitlab.com/haecker-felix/qrsvg.git",
               "branch":"master"
            }
         ]
      },
      {
         "name":"genqr",
         "builddir":true,
         "sources":[
            {
               "type":"git",
               "url":"https://github.com/haecker-felix/genQR"
            }
         ]
      }
   ]
}
