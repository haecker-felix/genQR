{
   "app-id":"de.haeckerfelix.genQR",
   "runtime":"org.gnome.Platform",
   "runtime-version":"3.26",
   "sdk":"org.gnome.Sdk",
   "command":"genqr",
   "finish-args":[
      "--share=ipc",
      "--share=network",
      "--socket=x11",
      "--socket=wayland",
      "--socket=pulseaudio",
      "--device=dri",
      "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
      "--filesystem=xdg-run/dconf",
      "--filesystem=~/.config/dconf:ro",
      "--filesystem=host",
      "--talk-name=ca.desrt.dconf",
   ],
   "modules":[
      {
         "name":"libqrencode",
         "sources":[
            {
               "type":"git",
	       "buildsystem" : "cmake",
               "url":"https://github.com/fukuchi/libqrencode",
               "branch":"master"
            }
         ]
      },
      {
         "name":"qrsvg",
         "sources":[
            {
               "type":"git",
	       "buildsystem" : "meson",
               "url":"https://gitlab.com/pwmc/qrsvg/tree/master",
               "branch":"master"
            }
         ]
      },
      {
         "name":"genqr",
         "buildsystem":"meson",
         "builddir":true,
         "sources":[
            {
               "type":"git",
               "url":"https://github.com/haecker-felix/genQR",
               "branch":"master"
            }
         ]
      }
   ]
}
